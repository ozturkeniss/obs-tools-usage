# OBS Tools Usage - Environment Variables
# Generated by Ansible

# Project Configuration
PROJECT_NAME={{ project_name }}
PROJECT_VERSION={{ project_version }}
ENVIRONMENT={{ environment }}

# AWS Configuration
AWS_REGION={{ aws_region }}
AWS_PROFILE={{ aws_profile }}

# Kubernetes Configuration
KUBECONFIG=/home/{{ default_user }}/.kube/config
K8S_CLUSTER_NAME={{ cluster_name }}

# Application Configuration
APP_NAMESPACE={{ app_namespace }}
APP_REPLICAS_GATEWAY={{ app_replicas.gateway }}
APP_REPLICAS_PRODUCT={{ app_replicas.product }}
APP_REPLICAS_BASKET={{ app_replicas.basket }}
APP_REPLICAS_PAYMENT={{ app_replicas.payment }}

# Database Configuration
POSTGRESQL_HOST={{ postgresql_host }}
POSTGRESQL_PORT={{ postgresql_port }}
POSTGRESQL_DATABASE={{ postgresql_database }}
POSTGRESQL_USERNAME={{ postgresql_username }}

MARIADB_HOST={{ mariadb_host }}
MARIADB_PORT={{ mariadb_port }}
MARIADB_DATABASE={{ mariadb_database }}
MARIADB_USERNAME={{ mariadb_username }}

# Redis Configuration
REDIS_HOST={{ redis_host }}
REDIS_PORT={{ redis_port }}
REDIS_DATABASE={{ redis_database }}

# Kafka Configuration
KAFKA_BROKERS={{ kafka_brokers }}

# Domain Configuration
DOMAIN_NAME={{ domain_name }}
CERTIFICATE_ARN={{ certificate_arn }}

# Monitoring Configuration
MONITORING_ENABLED={{ monitoring_enabled | lower }}
PROMETHEUS_RETENTION={{ prometheus_retention | default('15d') }}
GRAFANA_ADMIN_PASSWORD={{ grafana_admin_password | default('admin') }}

# Logging Configuration
LOG_LEVEL={{ log_level }}
LOG_RETENTION_DAYS={{ log_retention_days }}
STRUCTURED_LOGGING={{ structured_logging | lower }}

# Security Configuration
SECURITY_HARDENING={{ security_hardening | lower }}
FIREWALL_ENABLED={{ firewall_enabled | lower }}
FAIL2BAN_ENABLED={{ fail2ban_enabled | lower }}

# Backup Configuration
BACKUP_ENABLED={{ backup_enabled | lower }}
BACKUP_RETENTION_DAYS={{ backup_retention_days }}
BACKUP_SCHEDULE={{ backup_schedule }}

# Resource Configuration
RESOURCE_LIMITS_CPU={{ resource_limits.cpu }}
RESOURCE_LIMITS_MEMORY={{ resource_limits.memory }}
RESOURCE_LIMITS_STORAGE={{ resource_limits.storage }}

RESOURCE_REQUESTS_CPU={{ resource_requests.cpu }}
RESOURCE_REQUESTS_MEMORY={{ resource_requests.memory }}
RESOURCE_REQUESTS_STORAGE={{ resource_requests.storage }}

# Scaling Configuration
HPA_ENABLED={{ hpa_enabled | lower }}
HPA_MIN_REPLICAS={{ hpa_min_replicas }}
HPA_MAX_REPLICAS={{ hpa_max_replicas }}
HPA_CPU_TARGET={{ hpa_cpu_target }}
HPA_MEMORY_TARGET={{ hpa_memory_target }}

# Health Check Configuration
HEALTH_CHECK_PATH={{ health_check_path }}
HEALTH_CHECK_INTERVAL={{ health_check_interval }}
HEALTH_CHECK_TIMEOUT={{ health_check_timeout }}
HEALTH_CHECK_HEALTHY_THRESHOLD={{ health_check_healthy_threshold }}
HEALTH_CHECK_UNHEALTHY_THRESHOLD={{ health_check_unhealthy_threshold }}

# SSL Configuration
SSL_ENABLED={{ ssl_enabled | lower }}
CERTIFICATE_VALIDATION={{ certificate_validation | lower }}
HSTS_ENABLED={{ hsts_enabled | default(false) | lower }}

# Load Balancer Configuration
LOAD_BALANCER_TYPE={{ load_balancer_type }}
LOAD_BALANCER_SCHEME={{ load_balancer_scheme }}
LOAD_BALANCER_CROSS_ZONE={{ load_balancer_cross_zone | lower }}

# Ingress Configuration
INGRESS_CLASS={{ ingress_class }}
INGRESS_CONTROLLER={{ ingress_controller }}
INGRESS_SSL_REDIRECT={{ ingress_ssl_redirect | lower }}
INGRESS_HSTS={{ ingress_hsts | lower }}

# High Availability Configuration
HA_ENABLED={{ ha_enabled | default(false) | lower }}
MULTI_AZ={{ multi_az | default(false) | lower }}
CROSS_ZONE_LOAD_BALANCING={{ cross_zone_load_balancing | default(false) | lower }}

# Disaster Recovery Configuration
DR_ENABLED={{ dr_enabled | default(false) | lower }}
DR_REGION={{ dr_region | default('') }}
DR_BACKUP_RETENTION={{ dr_backup_retention | default(30) }}

# Compliance Configuration
COMPLIANCE_MODE={{ compliance_mode | default(false) | lower }}
AUDIT_LOGGING={{ audit_logging | default(false) | lower }}
ENCRYPTION_AT_REST={{ encryption_at_rest | default(false) | lower }}
ENCRYPTION_IN_TRANSIT={{ encryption_in_transit | default(false) | lower }}

# Performance Configuration
PERFORMANCE_MODE={{ performance_mode | default(false) | lower }}
CACHING_ENABLED={{ caching_enabled | default(false) | lower }}
CDN_ENABLED={{ cdn_enabled | default(false) | lower }}

# Cost Optimization
COST_OPTIMIZATION={{ cost_optimization | default(false) | lower }}
SPOT_INSTANCES={{ spot_instances | default(false) | lower }}
RESERVED_INSTANCES={{ reserved_instances | default(false) | lower }}
